<div class='row'>
  <div class='col-lg-12'>
    <%= simple_form_for resource, url: user_registration_path do |f| %> 
      <%= f.input :email %>
      <%= f.input :name %>
      <%= f.input :password %>
      <%= f.input :password_confirmation %>
      <%= f.input :accepted_terms %>
      <%= f.submit 'Save' %>
    <% end %>
  </div>
</div>
