<div class='row'>
  <div class='col-lg-12'>

    <div class='row'>
      <div class='col-lg-12'>
        <div class='top-actions pull-right'>
          <%= link_to 'Add new product', new_admin_product_path, class: '' %>
        </div>
      </div>
    </div>

    <table class="table table-striped">
      <tr>
        <th>Name</th>
        <th>Description</th>
        <th>Weight</th>
        <th>Purchasing price</th>
        <th>Selling price</th>
        <th>Actions</th>
      </tr>
      <% @products.each do |p| %>
        <tr>
          <td> <%= p.name %> </td>
          <td> <%= p.description %> </td>
          <td> <%= p.weight %> </td>
          <td> <%= p.purchasing_price %> </td>
          <td> <%= p.selling_price %> </td>
          <td> 
            <ul>
              <li> <%= link_to 'Edit', edit_admin_product_path(p) %> </li>
              <li> <%= link_to 'Delete', admin_product_path(p), method: :delete %> </li>
            </ul> 
          </td>
        </tr>
      <% end %>
    </table>
  </div>
</div>
