<div class="row">
  <div class='col-lg-12'> 
    <ol class="breadcrumb">
      <li> <%= link_to "Users", admin_users_path %> </li>
      <li> <%= link_to @user.name, admin_user_path(@user) %> </li>
      <li> <%= link_to "Customers", '#' %> </li>
    </ol>
  </div>
</div>

<div class='row'>
  <div class='col-lg-12'>

    <div class='row'>
      <div class='col-lg-12'>
        <div class='top-actions pull-right'>
          <%= link_to 'Add new customer', new_admin_user_customer_path, class: '' %>
        </div>
      </div>
    </div>

    <table class="table table-striped">
      <tr>
        <th>Name</th>
        <th>Address</th>
        <th>Phone</th>
        <th>WeChat</th>
        <th></th>
      </tr>
      <% @customers.each do |c| %>
        <tr>
          <td> <%= c.name %> </td>
          <td> <%= c.address %> </td>
          <td> <%= c.phone_number %> </td>
          <td> <%= c.wechat_id %> </td>
          <td> 
            <ul>
              <li><%= link_to 'Edit', edit_admin_user_customer_path(@user, c) %></li>
              <li><%= link_to 'Delete', admin_user_customer_path(@user, c), method: :delete %></li>
            </ul> 
          </td>
        </tr>
      <% end %>
    </table>
  </div>
</div>
