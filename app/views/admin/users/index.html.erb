<div class='row'>
  <div class='col-lg-12'>

    <div class='row'>
      <div class='col-lg-12'>
        <div class='top-actions pull-right'>
          <%= link_to 'Add new user', new_admin_user_path, class: '' %>
        </div>
      </div>
    </div>

    <table class="table table-striped">
      <tr>
        <th>Name</th>
        <th>Email</th>
        <th></th>
      </tr>
      <% @users.each do |u| %>
        <tr>
          <td> <%= u.name %> </td>
          <td> <%= u.email %> </td>
          <td> 
            <ul>
              <li> <%= link_to 'Edit', edit_admin_user_path(u) %></li>
              <li> <%= link_to 'Orders', admin_user_orders_path(u) %> </li>
              <li> <%= link_to 'Customers', admin_user_customers_path(u) %> </li>
            </ul>
          </td> 
        </tr>
      <% end %>
    </table>
  </div>
</div>
