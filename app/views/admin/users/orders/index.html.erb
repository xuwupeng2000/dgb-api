<div class="row">
  <div class='col-lg-12'> 
    <ol class="breadcrumb">
      <li> <%= link_to "Users", admin_users_path %> </li>
      <li> <%= link_to @user.name, admin_user_path(@user) %> </li>
      <li> <%= link_to "Customers", '#' %> </li>
    </ol>
  </div>
</div>

<div class='row'>
  <div class='col-lg-12'>

    <div class='row'>
      <div class='col-lg-12'>
        <div class='top-actions pull-right'>
          <%= link_to 'Add new order', new_admin_user_order_path, class: '' %>
        </div>
      </div>
    </div>

    <table class="table table-striped">
      <tr>
        <th>Reference</th>
        <th>Status</th>
        <th>Ordered at</th>
        <th></th>
      </tr>
      <% @orders.each do |o| %>
        <tr>
          <td> <%= o.ref %> </td>
          <td> <%= o.state %> </td>
          <td> <%= o.placed_at %> </td>
          <td> 
            <ul>
              <li><%= link_to 'Edit', edit_admin_user_order_path(@user, o) %></li>
              <li>Delivery</li>
              <li>Customer</li>
              <li>Suborders</li>
            </ul> 
          </td>
        </tr>
      <% end %>
    </table>
  </div>
</div>
