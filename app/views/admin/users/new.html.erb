<div class='row'>
  <div class='col-lg-12'>
    <%= simple_form_for @user, url: admin_users_path do |f| %> 
      <%= f.input :email %>
      <%= f.input :name %>
      <%= f.input :password %>
      <%= f.input :password_confirmation %>
      <%= f.hidden_field :accepted_terms, value: true %>
      <%= f.submit 'Save' %>
    <% end %>
  </div>
</div>
